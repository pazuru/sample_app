#!/bin/bash

RUN_DIR=/var/vcap/sys/run/sample_app
LOG_DIR=/var/vcap/sys/log/sample_app
PIDFILE=${RUN_DIR}/pid

case $1 in
  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR
    echo $$ > $PIDFILE
    cd /var/vcap/packages/sample_app
    exec /var/vcap/packages/sample_app/server.pl \
      >> $LOG_DIR/sample_app.stdout.log \
      2>> $LOG_DIR/sample_app.stderr.log
    ;;
  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    ;;
  *)
    echo "Usage: ctl (start|stop)"
    ;;
esac
